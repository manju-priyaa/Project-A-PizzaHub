@model PizzaOrderingSystem.Models.Cart

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pizza Name: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pizzaname)
        </dd>
        <dt class = "col-sm-2">
            Crust :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.crust)
        </dd>
        <dt class = "col-sm-2">
            Toppings : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.toppings)
        </dd>
        <dt class = "col-sm-2">
            Customized Pizza Price :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.custpizzaprice)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remove from Cart" class="btn btn-danger"  formmethod="post"/> |
        <a asp-action="Cart">Back to Cart</a>
    </form>
</div>
