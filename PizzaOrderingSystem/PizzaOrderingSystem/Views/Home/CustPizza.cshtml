
@model PizzaOrderingSystem.Models.CustPizza

@{
    ViewData["Title"] = "CustPizza";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="container align-items-center">
            <form class="container" id="basic-form">
                <br />
                <br />
                <h2>Customize Your Pizza : @Model.name</h2>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="price"><h6>Pizza Price</h6></label>
                            <input asp-for="perPizzaAmount" class="form-control" value=@Model.perPizzaAmount disabled>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="quantity"><h6>Quantity</h6></label>
                            <input asp-for="quantity" class="form-control" min=1 max=20 id="quantity" required />
                            <span asp-validation-for="quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="crust"><h6>Modify Crust</h6></label>
                            @Html.DropDownList("crust", new SelectList(ViewBag.crusts, "Crusts"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="toppings"><h6>Add Toppings(Extra Cost)</h6></label>
                            @Html.DropDownList("toppings", new SelectList(ViewBag.toppingname, "Toppings"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <button type="submit" id="btnSubmit" class="btn btn-dark" formmethod="post">Add To Cart</button>
                <br />
                <br />
            </form>

        </div>
    </div>

</section>














